{
  "compilerOptions": {
    "target": "ES2015", //"es6", //"ES2015",
    "module": "ES2015", //"commonjs", //"ES2015", //"commonjs",
//    "lib": ["es6"],
//    "types": ["node"],
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "./build",
    "importHelpers": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
//    "../node_modules/@types/node/globals.d.ts"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
